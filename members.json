---
---
{
  "title": {{ site.title | jsonify }},
  "description": {% if site.description %}{{ site.description | jsonify }}{% endif %},
  "home_page_url": "{{ site.url }}",
  "feed_url": "{{ site.url }}/members.json",
  "members": [
    {% for member in site.members %}
    {
      "id": "{{ member.id }}",
      "url": "{{ member.id | prepend: site.baseurl | prepend: site.url }}",
      "name": {{ member.name | jsonify }},
      "affiliation": {{ member.affilation | jsonify }},
      "latitude": {{ member.lat }},
      "longitude": {{ member.long }}
      }{% unless forloop.last %},{% endunless %}
    {% endfor %}
  ]
}
